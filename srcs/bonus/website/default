server {
    listen 80;
    listen [::]:80;
    
    root /var/www/html;
    index index.html;
    
    server_name _;
    
    location / {
        try_files $uri $uri/ =404;
    }
    
    # Ensure correct MIME types
    location ~* \.(css)$ {
        add_header Content-Type text/css;
    }
    
    location ~* \.(js)$ {
        add_header Content-Type application/javascript;
    }
}